<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/darksimpelbackground"
    android:id="@+id/settings"
    android:gravity="center_horizontal">

    <Button
        android:textAllCaps="false"
        android:id="@+id/arrow"
        android:background="@drawable/darkarrowbutton"
        android:layout_width="250dp"
        android:text="@string/save_arabe"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_height="wrap_content"/>


    <!--Main Page-->
    <LinearLayout
        android:id="@+id/settingsmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Notification Enabler-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:id="@+id/settingstitle"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/settings_arabe" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp">
            <Switch
                android:id="@+id/notiswitch"
                android:gravity="center"
                android:layout_weight=".80"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_weight=".20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/notitext"
                android:gravity="center"
                android:text="@string/main_noti_arabe" />
        </LinearLayout>

        <!--Mou'adin Title-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:id="@+id/adantitle"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:text="@string/adan_arabe" />
        <!--Fajr Selections-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="@dimen/tabrightpadding"
            android:id="@+id/fajrback"
            android:paddingRight="@dimen/tabrightpadding"
            android:background="@drawable/selectorresposive"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:gravity="center">
            <LinearLayout
                android:layout_weight=".15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:gravity="center"
                    android:id="@+id/fajrtitle"
                    android:text="@string/fajrtitle_arabe"
                    android:layout_weight=".75"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_weight=".25"
                    android:id="@+id/fajradan"
                    android:background="@color/coolbright"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
            <FrameLayout
                android:padding="@dimen/soundimagesize"
                android:id="@+id/fajrringmodebackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/fajrringmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
        <!--Rise Selections-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="@dimen/tabrightpadding"
            android:id="@+id/riseback"
            android:paddingRight="@dimen/tabrightpadding"
            android:background="@drawable/selectorresposive"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:gravity="center">
            <LinearLayout
                android:layout_weight=".15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:gravity="center"
                    android:id="@+id/risetitle"
                    android:text="@string/rise_arabe"
                    android:layout_weight=".75"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_weight=".25"
                    android:id="@+id/riseadan"
                    android:visibility="invisible"
                    android:background="@color/coolbright"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
            <FrameLayout
                android:padding="@dimen/soundimagesize"
                android:id="@+id/riseringmodebackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/riseringmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center" />
            </FrameLayout>
        </LinearLayout>
        <!--Dhuhr Selections-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="@dimen/tabrightpadding"
            android:paddingRight="@dimen/tabrightpadding"
            android:id="@+id/dhuhrback"
            android:background="@drawable/selectorresposive"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:gravity="center">
            <LinearLayout
                android:layout_weight=".15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:gravity="center"
                    android:id="@+id/dhuhrtitle"
                    android:text="@string/dohrtitle_arabe"
                    android:layout_weight=".75"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_weight=".25"
                    android:id="@+id/dhuhradan"
                    android:background="@color/coolbright"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
            <FrameLayout
                android:padding="@dimen/soundimagesize"
                android:id="@+id/dhuhrringmodebackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/dhuhrringmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
        <!--Asr Selections-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="@dimen/tabrightpadding"
            android:paddingRight="@dimen/tabrightpadding"
            android:background="@drawable/selectorresposive"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:id="@+id/asrback"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:gravity="center">
            <LinearLayout
                android:layout_weight=".15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:gravity="center"
                    android:id="@+id/asrtitle"
                    android:text="@string/asrtitle_arabe"
                    android:layout_weight=".75"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_weight=".25"
                    android:id="@+id/asradan"
                    android:background="@color/coolbright"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
            <FrameLayout
                android:padding="@dimen/soundimagesize"
                android:id="@+id/asrringmodebackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/asrringmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
        <!--Maghrib Selections-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="@dimen/tabrightpadding"
            android:id="@+id/maghrebback"
            android:paddingRight="@dimen/tabrightpadding"
            android:background="@drawable/selectorresposive"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:gravity="center">
            <LinearLayout
                android:layout_weight=".15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:gravity="center"
                    android:id="@+id/maghribtitle"
                    android:text="@string/maghrebtitle_arabe"
                    android:layout_weight=".75"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_weight=".25"
                    android:id="@+id/maghribadan"
                    android:background="@color/coolbright"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </LinearLayout>
            <FrameLayout
                android:padding="@dimen/soundimagesize"
                android:id="@+id/maghribringmodebackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/maghribringmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
        <!--Isha Selections-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="@dimen/tabrightpadding"
            android:paddingRight="@dimen/tabrightpadding"
            android:id="@+id/ishaback"
            android:background="@drawable/selectorresposive"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="39dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:gravity="center">
            <LinearLayout
                android:layout_weight=".15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/adanselectiontextsize"
                    android:gravity="center"
                    android:id="@+id/ishatitle"
                    android:text="@string/ishatitle_arabe"
                    android:layout_weight=".75"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/ishaadan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".25"
                    android:background="@color/coolbright"
                    android:gravity="center"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/adanselectiontextsize" />
            </LinearLayout>
            <FrameLayout
                android:padding="@dimen/soundimagesize"
                android:id="@+id/isharingmodebackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".85"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/isharingmode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!--Mouadin Selector page-->
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/selectionmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--Adan Selection Title-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:id="@+id/selectiontitle"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/select_an_adan_arabe" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan1audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"
                android:src="@drawable/play"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan1_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan2audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"
                android:src="@drawable/play"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan2_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan3audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"
                android:src="@drawable/play"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan3_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan4audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"
                android:src="@drawable/play"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan4_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan5audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"
                android:src="@drawable/play"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan5_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="36dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan6audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"
                android:src="@drawable/play"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan6_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>