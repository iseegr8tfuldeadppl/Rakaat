<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".force"
    android:background="@color/black"
    android:id="@+id/full">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/statsback"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
        <ImageView
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="13dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/stats"
            android:onClick="ShowStatisticsClicked"/>
    </RelativeLayout>

    <!--Table content-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/force_arabe"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sidesoftable"
            android:layout_marginEnd="@dimen/sidesoftable"
            android:paddingTop="17dp"
            android:background="@drawable/date"
            android:gravity="center">
            <TextView
                android:id="@+id/daterr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="التاريخ"
                android:textColor="@color/white"
                android:textSize="@dimen/regulartextsize" />
        </RelativeLayout>

        <!--access other days-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sidesoftable"
            android:layout_marginEnd="@dimen/sidesoftable"
            android:orientation="horizontal"
            android:weightSum="2">
            <RelativeLayout
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/multipledayselectionbackground"
                android:paddingStart="@dimen/sidesoftablepaddings"
                android:onClick="checkYesterday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="1"
                android:paddingLeft="@dimen/sidesoftablepaddings">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:onClick="checkYesterday"
                    android:layout_width="12dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrowleft"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/multipledayselectionbackground"
                android:onClick="checkTommorow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="@dimen/sidesoftablepaddings"
                android:layout_weight="1"
                android:paddingRight="@dimen/sidesoftablepaddings">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:onClick="checkTommorow"
                    android:layout_width="12dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrowright"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"/>
            </RelativeLayout>
        </LinearLayout>


        <!-- Table -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/tablesampler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginStart="@dimen/sidesoftable"
                android:layout_marginEnd="@dimen/sidesoftable"
                android:paddingStart="@dimen/sidesoftablepaddings"
                android:paddingEnd="@dimen/sidesoftablepaddings"
                android:background="@drawable/darksimpelbackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/fajrtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="2">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/fajrtitle"
                        android:text="@string/fajrtitle_arabe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:id="@+id/prayfajr"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="fajrClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sidesoftable"
                android:layout_marginEnd="@dimen/sidesoftable"
                android:orientation="horizontal"
                android:background="@drawable/darksimpelbackground"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder"
                android:paddingStart="@dimen/sidesoftablepaddings"
                android:paddingEnd="@dimen/sidesoftablepaddings">
                <TextView
                    android:id="@+id/risetime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="2">
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/risetitle"
                        android:text="@string/rise_arabe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:visibility="invisible"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sampler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sidesoftable"
                android:layout_marginEnd="@dimen/sidesoftable"
                android:paddingStart="@dimen/sidesoftablepaddings"
                android:paddingEnd="@dimen/sidesoftablepaddings"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@drawable/darksimpelbackground"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/dohrtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/dohrtitle"
                        android:text="@string/dohrtitle_arabe"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:id="@+id/praydhuhr"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="dhuhrClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/sidesoftablepaddings"
                android:paddingEnd="@dimen/sidesoftablepaddings"
                android:layout_marginStart="@dimen/sidesoftable"
                android:layout_marginEnd="@dimen/sidesoftable"
                android:orientation="horizontal"
                android:weightSum="1"
                android:background="@drawable/darksimpelbackground"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/asrtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/asrtitle"
                        android:text="@string/asrtitle_arabe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:id="@+id/prayasr"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="asrClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sidesoftable"
                android:layout_marginEnd="@dimen/sidesoftable"
                android:orientation="horizontal"
                android:paddingStart="@dimen/sidesoftablepaddings"
                android:paddingEnd="@dimen/sidesoftablepaddings"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:background="@drawable/darksimpelbackground"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/maghrebtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/maghrebtitle"
                        android:text="@string/maghrebtitle_arabe"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:id="@+id/praymaghrib"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="maghribClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/sidesoftablepaddings"
                android:paddingEnd="@dimen/sidesoftablepaddings"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/sidesoftable"
                android:background="@drawable/darksimpelbackground"
                android:layout_marginEnd="@dimen/sidesoftable"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/ishatime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/ishatitle"
                        android:text="@string/ishatitle_arabe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <TextView
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:id="@+id/prayisha"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="ishaClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:visibility="invisible"
                android:id="@+id/slideholder"
                android:layout_gravity="start|top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">
                <TextView
                    android:id="@+id/slider"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:background="@drawable/delaydisplay"
                    android:textSize="20sp"/>
            </RelativeLayout>
        </FrameLayout>

        </FrameLayout>

        <!-- City n wilaya -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/city"
            android:text="المدينة"
            android:textSize="@dimen/regulartextsize"
            android:textColor="@color/white"
            android:id="@+id/city"
            android:gravity="center"
            android:paddingTop="17dp"
            android:paddingBottom="15dp"
            android:layout_marginStart="@dimen/sidesoftable"
            android:layout_marginEnd="@dimen/sidesoftable"/>

    </LinearLayout>


</RelativeLayout>