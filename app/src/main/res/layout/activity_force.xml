<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".force"
    android:background="@color/black"
    android:id="@+id/full">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/darksimpelbackground"
        android:onClick="resetClicked"
        android:text="reset"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:layout_alignParentBottom="true"/>


    <!-- Main Layout Holder -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/force_arabe"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"/>

        <!-- Date in hijri n miladi       /       City n wilaya  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/sidesoftable"
            android:layout_marginEnd="@dimen/sidesoftable">
            <!-- Date in hijri n miladi -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/date"
                android:text="التاريخ"
                android:textSize="@dimen/regulartextsize"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingTop="17dp"
                android:paddingBottom="15dp"/>
            <!-- City n wilaya -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/city"
                android:text="المدينة"
                android:textSize="@dimen/regulartextsize"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingTop="17dp"
                android:paddingBottom="15dp"/>
        </LinearLayout>

        <!-- Table -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/darksimpelbackground"
            android:layout_marginStart="@dimen/sidesoftable"
            android:layout_marginEnd="@dimen/sidesoftable"
            android:paddingStart="@dimen/sidesoftablepaddings"
            android:paddingEnd="@dimen/sidesoftablepaddings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/fajrtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="1">
                    <TextView
                        android:layout_weight=".5"
                        android:id="@+id/fajrtitle"
                        android:text="@string/fajrtitle_arabe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="15sp"/>
                    <Button
                        android:id="@+id/prayfajr"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="fajrClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/risetime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>
                <TextView
                    android:id="@+id/risetitle"
                    android:text="@string/rise_arabe"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".4"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/dohrtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/dohrtitle"
                        android:text="@string/dohrtitle_arabe"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <Button
                        android:id="@+id/praydhuhr"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="dhuhrClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/asrtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/asrtitle"
                        android:text="@string/asrtitle_arabe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <Button
                        android:id="@+id/prayasr"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="asrClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/maghrebtime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/maghrebtitle"
                        android:text="@string/maghrebtitle_arabe"
                        android:layout_width="match_parent"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <Button
                        android:id="@+id/praymaghrib"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="maghribClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingTop="@dimen/padder"
                android:paddingBottom="@dimen/padder">
                <TextView
                    android:id="@+id/ishatime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/regulartextsize"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight=".4"
                    android:weightSum="1">
                    <TextView
                        android:id="@+id/ishatitle"
                        android:text="@string/ishatitle_arabe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:textSize="@dimen/regulartextsize"/>
                    <Button
                        android:id="@+id/prayisha"
                        android:background="@drawable/darkbuttons"
                        android:layout_weight=".5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="ishaClicked"
                        android:text="@string/joinprayer"
                        android:textSize="@dimen/regulartextsize"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>