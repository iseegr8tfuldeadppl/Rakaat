<LinearLayout android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/darksimpelbackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:textAllCaps="false"
        android:id="@+id/arrow"
        android:background="@drawable/darkarrowbutton"
        android:layout_width="250dp"
        android:text="@string/back_arabe"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_height="wrap_content"/>
    <!--Mouadin Selector page-->
    <LinearLayout
        android:id="@+id/selectionmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Adan Selection Title-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:id="@+id/selectiontitle"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/select_an_adan_arabe" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan1audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan1_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan2audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan2_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan3audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan3_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan4audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan4_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan5audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan5_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="36dp"
            android:orientation="horizontal"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:weightSum="1">
            <ImageView
                android:id="@+id/adan6audioplayer"
                android:layout_weight=".85"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/playbuttonsize"
                android:layout_width="match_parent"
                android:layout_height="@dimen/playbuttonheight"/>
            <TextView
                android:layout_weight=".15"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/selectorresposive"
                android:id="@+id/adan6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/adan6_arabe"
                android:paddingTop="@dimen/biglollers"
                android:paddingBottom="@dimen/biglollers"
                android:textSize="@dimen/adanselectiontextsize"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>